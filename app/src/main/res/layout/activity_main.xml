<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="center"
        android:text="CASINO"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="150dp"
        app:autoSizeMinTextSize="50dp"
        app:autoSizeStepGranularity="5dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/xi_dach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:foreground="@drawable/ripple"
            android:padding="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/blackjack" />

        <ImageButton
            android:id="@+id/bai_cao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:foreground="@drawable/ripple"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/three_card_poker" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/bau_cua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:foreground="@drawable/ripple"
            android:paddingLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/sicbo" />

        <ImageButton
            android:id="@+id/dua_nguoi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:foreground="@drawable/ripple"
            android:padding="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/race" />
    </LinearLayout>

    <TextView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:drawableLeft="@drawable/coin"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textColor="#Fff"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>